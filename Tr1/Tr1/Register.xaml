<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tr1.Register">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
            <Label Text="Registro" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Entry x:Name="entryUsername" Placeholder="Nombre de usuario" />

            <Entry x:Name="entryEmail" Placeholder="Email" Keyboard="Email" />

            <Entry x:Name="entryPassword" Placeholder="Contraseña" IsPassword="True" />

            <Button Text="Registrarse" BackgroundColor="#4CAF50" TextColor="White"  Clicked="Button_Clicked" />

            <Label Text="¿Ya tienes una cuenta?" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
