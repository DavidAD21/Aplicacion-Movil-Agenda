<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tr1.Login">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
            <Label Text="Login" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Entry x:Name="entryUsername" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="entryPassword" Placeholder="Password" IsPassword="True" />

            <Button Text="Iniciar Sesión" BackgroundColor="#4CAF50" TextColor="White" Clicked="HandleLoginClicked" />


            <Label Text="¿No tienes una cuenta?" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="HandleRegisterTapped" />
                </Label.GestureRecognizers>
            </Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
