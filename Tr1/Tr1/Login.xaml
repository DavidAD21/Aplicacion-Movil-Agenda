<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tr1.Login"
             Title="Iniciar Sesion"
             IconImageSource="hora.png">

    <StackLayout VerticalOptions="Center" Padding="20">
        <Image Source="user.png" Aspect="AspectFit" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <Label Text="Ingresar" TextColor="White" FontSize="30" HorizontalOptions="Center" Margin="0,20,0,20"/>
        <Entry PlaceholderColor="White" Placeholder="Usuario" TextColor="White" x:Name="TxtUsuario" HorizontalOptions="FillAndExpand" Margin="0,0,0,10" />
        <Entry PlaceholderColor="White" Placeholder="Contraseña"  TextColor="White" x:Name="TxtPassword" IsPassword="True" HorizontalOptions="FillAndExpand" Margin="0,0,0,10" />
        <Button Text="Iniciar sesión" x:Name="BtnIngresar" Clicked="Ingresar_Clicked" HorizontalOptions="FillAndExpand" BackgroundColor="#007bff" TextColor="White" Margin="0,0,0,10" />
        <Button Text="Registro" Clicked="Registro_Clicked" HorizontalOptions="FillAndExpand" BackgroundColor="#6c757d" TextColor="White" />
    </StackLayout>
</ContentPage>
